{
  "name": "api",
  "version": "0.0.1",
  "description": "API Foundation",
  "main": "dist/index.js",
  "license": "MIT",
  "private": false,
  "scripts": {
    "jest": "jest --coverage",
    "lint": "yarn eslint --fix ./src/",
    "prettier": "prettier --write src/**",
    "lint:fix": "yarn lint && yarn prettier",
    "start": "node src/index.ts",
    "test": "NODE_ENV=test yarn jest --detectOpenHandles",
    "typecheck": "node_modules/.bin/tsc --noEmit",
    "prepare": "husky install",
    "dev:tsc": "tsc --watch -p .",
    "dev:serve": "nodemon -e js -w dist dist/main.js | pino-pretty",
    "dev": "run-p dev:*",
    "prod:serve": "node dist/index.js",
    "build-clean": "tsc --build --clean",
    "setup-local-database": "docker run -d  --name mongo-on-docker  -p 27888:27017 -e MONGO_INITDB_ROOT_USERNAME=mongoadmin -e MONGO_INITDB_ROOT_PASSWORD=secret mongo"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@hapi/code": "^9.0.2",
    "@hapi/lab": "^25.1.0",
    "@secretcowlevel/eslint-config-secretcowlevel": "^0.0.5",
    "@types/bcrypt": "^5.0.0",
    "@types/boom": "^7.3.2",
    "@types/hapi__hapi": "^20.0.13",
    "@types/hapi__inert": "^5.2.5",
    "@types/hapi__joi": "^17.1.9",
    "@types/hapi__vision": "^5.5.4",
    "@types/jest": "^29.4.0",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.13.0",
    "@types/uuid": "^9.0.0",
    "husky": "^8.0.0",
    "jest": "^29.4.1",
    "lint-staged": ">=13",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "@hapi/hapi": "^21.2.1",
    "@hapi/inert": "^7.0.0",
    "@hapi/vision": "^7.0.0",
    "@types/joi": "^17.2.3",
    "@types/mongoose": "^5.11.97",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "hapi-auth-jwt2": "^10.4.0",
    "hapi-pino": "^11.0.1",
    "hapi-swagger": "15.0.0",
    "joi": "17.x",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.9.0",
    "nodemon": "^2.0.20",
    "pg": "^8.9.0",
    "pg-hstore": "^2.3.4",
    "stripe": "^11.14.0",
    "typescript": "^4.9.5",
    "uuid": "^9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
